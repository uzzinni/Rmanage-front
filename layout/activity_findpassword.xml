<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">
    <TextView
        android:id="@+id/find_main"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:text="@string/findpassword"
        android:textSize="27sp"
        android:textColor="#000000"
        android:includeFontPadding="false"
        android:layout_marginTop="75dp"
        android:layout_marginStart="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/find_back"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="67dp"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/navigate_before"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/find_email"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textSize="20sp"
        android:lineHeight="24.2dp"
        android:textColor="#000000"
        android:includeFontPadding="false"
        android:layout_marginTop="189dp"
        android:layout_marginStart="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="327dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="216dp"
        android:importantForAutofill="no"
        android:background="@null"
        android:inputType="textEmailAddress"
        tools:ignore="LabelFor,TextFields" />
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="230dp"
        android:layout_height="19dp"
        android:text=""
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="17dp"
        android:layout_marginTop="245dp" />

    <View
        android:id="@+id/line_177"
        android:layout_width="327dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="21dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/line_1"
        />

    <Button
        android:id="@+id/email_ok"
        android:layout_width="328dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/rectangle_4"
        android:text="@string/ok"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>