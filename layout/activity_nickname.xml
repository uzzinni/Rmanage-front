<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nickname">

    <TextView
        android:id="@+id/nick_main"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:text="@string/member"
        android:textSize="27sp"
        android:textColor="#000000"
        android:includeFontPadding="false"
        android:layout_marginTop="75dp"
        android:layout_marginStart="129dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/nick_back"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="67dp"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/navigate_before"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/nick_text"
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:text="@string/enter_nick"
        android:textSize="20sp"
        android:textColor="#000000"
        android:includeFontPadding="false"
        android:layout_marginTop="186dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/edit_register"
        android:layout_width="300dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="21dp"
        android:layout_marginTop="239dp"
        android:importantForAutofill="no"
        android:background="@null"
        android:hint="@string/nick"
        android:textColorHint="#E1E1E1"
        android:inputType="text"
        tools:ignore="LabelFor,TextFields" />

    <View
        android:id="@+id/line_177"
        android:layout_width="327dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="19dp"
        android:layout_marginTop="267dp"
        android:background="@drawable/line_1"
        />


    <Button
        android:id="@+id/email_ok3"
        android:layout_width="328dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="460dp"
        android:background="@drawable/rectangle_4"
        android:text="@string/ok"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="210dp"
        android:layout_height="19dp"
        android:text=""
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="19dp"
        android:layout_marginTop="284dp" />

</androidx.constraintlayout.widget.ConstraintLayout>