<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Changepassword">


    <TextView
        android:id="@+id/change_password_main"
        android:layout_width="117dp"
        android:layout_height="24dp"
        android:text="@string/change_pa"
        android:textSize="20sp"
        android:lineHeight="24.2dp"
        android:textColor="#000000"
        android:includeFontPadding="false"
        android:layout_marginTop="77dp"
        android:layout_marginStart="121dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/change_password_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="68dp"
        android:layout_marginStart="310dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/close"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/change_password_box"
        android:layout_width="294dp"
        android:layout_height="50dp"
        android:text="@string/string_box"
        android:textSize="16sp"
        android:lineSpacingExtra="6sp"
        android:lineHeight="24.2dp"
        android:textColor="#000000"
        android:includeFontPadding="false"
        android:layout_marginTop="157dp"
        android:layout_marginStart="19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/line_1"
        android:layout_width="328dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="268dp"
        android:background="@drawable/line_4" />
    <EditText
        android:id="@+id/email_ex"
        android:layout_width="290dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="19dp"
        android:layout_marginTop="234dp"
        android:importantForAutofill="no"
        android:background="@null"
        android:hint="@string/email_ex"
        tools:ignore="LabelFor,TextFields"
        android:inputType="text" />
    <View
        android:id="@+id/line_2"
        android:layout_width="328dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/line_4" />
    <EditText
        android:id="@+id/password_ex"
        android:layout_width="290dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="19dp"
        android:layout_marginTop="295dp"
        android:importantForAutofill="no"
        android:background="@null"
        android:hint="@string/password"
        tools:ignore="LabelFor,TextFields"
        android:inputType="textPassword" />
    
    <TextView
        android:layout_width="131dp"
        android:layout_height="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="352dp"
        android:text="@string/password_boom"
        android:textSize="10sp"
        android:textColor="#000000"
        android:includeFontPadding="false"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/password_ok"
        android:layout_width="329dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="420dp"
        android:text="@string/ok"
        android:textSize="20sp"
        android:background="@drawable/rectangle_4"/>
</androidx.constraintlayout.widget.ConstraintLayout>