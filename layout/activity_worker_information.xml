<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Worker_information">

    <TextView
        android:id="@+id/setting_main"
        android:layout_width="98dp"
        android:layout_height="24dp"
        android:text="@string/workwe_info"
        android:gravity="top"
        android:textSize="20sp"
        android:lineHeight="24.2dp"
        android:textColor="#000000"
        android:includeFontPadding="false"
        android:layout_marginTop="79dp"
        android:layout_marginStart="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_data"
        android:layout_width="360dp"
        android:layout_height="450dp"
        android:layout_marginTop="120dp"
        android:layout_marginStart="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="328dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="614dp"
        android:layout_marginStart="16dp"
        android:text="@string/workwe_plus"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@drawable/rectangle_01"
        />

</androidx.constraintlayout.widget.ConstraintLayout>